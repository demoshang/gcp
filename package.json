{
  "name": "@s4p/gcp",
  "type": "module",
  "version": "0.1.0",
  "description": "glob copy file",
  "author": "SHANG",
  "license": "MIT",
  "homepage": "https://github.com/demoshang/gcp",
  "repository": {
    "type": "git",
    "url": "https://github.com/demoshang/gcp.git"
  },
  "keywords": [],
  "exports": {
    "import": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "require": {
      "types": "./dist/index.d.cts",
      "default": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.cts",
  "bin": {
    "gcp": "./dist/index.cjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm run clean && concurrently pnpm:build:*",
    "build:bundle": "pnpm run bundle --sourcemap",
    "build:copy": "cpx README.md dist/ && cat package.json | jq '{name,type,version,description,homepage,repository,exports,main,types,bin,dependencies,keywords,module:.module} | walk(if type == \"string\" and contains(\"./dist/\") then gsub(\"./dist/\"; \"./\") else . end)' > dist/package.json",
    "bundle": "tsup src/index.ts --treeshake --shims --format esm,cjs --dts",
    "clean": "rimraf dist",
    "dev": "pnpm run clean && pnpm run bundle --sourcemap=inline --watch",
    "lint": "concurrently pnpm:lint:*",
    "lint:fix": "eslint ./src --fix",
    "lint:tsc": "tsc --noEmit",
    "start": "cross-env node --import @swc-node/register/esm-register src/index.ts"
  },
  "dependencies": {
    "debug": "^4.4.0",
    "fs-extra": "^11.3.0",
    "glob": "^11.0.1",
    "jackspeak": "^4.0.3"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.1.1",
    "@swc-node/register": "^1.10.9",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.16",
    "@types/debug": "^4.1.12",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.13.2",
    "concurrently": "^9.1.2",
    "cpx2": "^8.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.20.1",
    "eslint-plugin-format": "^1.0.1",
    "rimraf": "^6.0.1",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3"
  },
  "volta": {
    "node": "22.14.0",
    "pnpm": "10.3.0"
  }
}
